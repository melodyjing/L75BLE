/* pages/device/info.wxss */
.wrapper {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

.content {
  padding: 20rpx 0;
  width: 94%;
  margin: auto;
}

.picker image {
  width: 16rpx;
  height: 11rpx;
  margin-left: 15rpx;
}

.picker {
  color: #282828;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  width: 90%;
  margin: auto;
}

.tip {
  width: 90%;
  margin: 10rpx auto;
  font-size: 28rpx;
  color: #7A7A7A;
  height: 40rpx;
}

.product image {
  width: 100%;
  height: 420rpx;
}

.box {
  position: absolute;
  top: 400rpx;
  right: 50rpx;
  color: #ffffff;
  font-size: 38rpx;
  z-index: 1;
}
.device_name{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 38rpx;
}
.box .name {
  border-bottom: 1px solid #5479FA;
  padding: 10rpx 0 20rpx;
}

.box .number {
  margin-top: 50rpx;
  font-size: 26rpx;
  text-align: right;
  color: #D1DBFF;
}

.box .number view:last-child {
  font-size: 66rpx;
  font-weight: bolder;
  margin-top: 10rpx;
  color: #ffffff;
}

.canvas-table {
  width: 100%;
  background: #ffffff;
  /* height: 350rpx; */
  margin: 20rpx auto;
  border-radius: 20rpx;
  padding-bottom: 40rpx;
}

.line {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.line .left {
  width: 60%;
  padding: 30rpx 20rpx;
  background: #ffffff;
  border-radius: 30rpx;
}

.line .left .top_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 38rpx;
  color: #141414;
  font-weight: bold;
}

.line .left .top_title image {
  width: 95rpx;
  height: 50rpx;
}

.line .left .left_line {
  display: flex;
  align-items: center;
  margin: 25rpx auto 10rpx;
  justify-content: space-between;
}

.line .left .left_line .box2 {
  width: 45%;
  font-size: 26rpx;
}

.line .left .left_line .box2 view:nth-child(2) {
  font-size: 24rpx;
  color: #A1A1A1;
  margin: 5rpx 0;
}

.line .left .left_line .box2 view:last-child {
  font-size: 50rpx;
  color: #141414;
  font-weight: bold;
}

.line .right {
  width: 25%;
  padding: 20rpx 20rpx;
  background: #ffffff;
  text-align: center;
  border-radius: 30rpx;
  font-size: 38rpx;
  color: #141414;
  font-weight: bold;
}

.line .right image {
  width: 100rpx;
  height: 100rpx;
  margin: 50rpx auto 10rpx;
}


.bottom_line {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.bottom_line .box1 {
  background: #ffffff;
  width: 43%;
  padding: 30rpx 20rpx;
  display: flex;
  border-radius: 40rpx;
  align-items: center;
  justify-content: space-around;
  font-size: 34rpx;
  color: #141414;
}

.bottom_line .box1 image {
  width: 100rpx;
  height: 100rpx;
}

.year_line {
  display: flex;
  align-items: center;
  width: 90%;
  margin: 0 0;
  font-size: 34rpx;
  font-weight: bold;
}

.year_line image {
  width: 30rpx;
  height: 35rpx;
  padding: 40rpx 20rpx;
}

.year_line view {
  margin: 0 10rpx;
}


.qrcode-bg {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, 0.7);
}

.qrcode_pop {
  width: 550rpx;
  background-color: white;
  /* position: fixed;
  top: 10%;
  left: 100rpx; */
  border-radius: 30rpx;
  font-size: 33rpx;
  margin-top: 180rpx;
  margin-left: 100rpx;
}

.qrcode_pop .bg {
  width: 100%;
  height: 780rpx;
}

.box3 {
  width: 100%;
  text-align: center;
  margin-top: -150rpx;
  font-size: 32rpx;
  color: #000000;
}

.box3 view:nth-child(2) {
  color: #254bee;
  font-size: 80rpx;
  font-weight: bold;
}

.box3 view:nth-child(3),
.box3 view:nth-child(4) {
  color: #282828;
}

.box3 view:nth-child(3) text {
  font-weight: bold;
}

.box3 image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.cancel {
  position: absolute;
  top: 30rpx;
  width: 50rpx;
  height: 50rpx;
  right: 30rpx;
}


.fail-bg {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background-color: #494949;
  opacity: 0.8;
  z-index: 999;
}

.fail-pop {
  width: 90%;
  background-color: white;
  position: fixed;
  top: 10%;
  left: 5%;
  border-radius: 30rpx;
  font-size: 33rpx;
  text-align: center;
  padding: 20rpx 0;
  z-index: 999;
}

.fail-pop .bg {
  width: 120rpx;
  height: 260rpx;
}

.fail_tip {
  width: 100%;
  text-align: center;
  font-weight: bolder;
  font-size: 56rpx;
  margin: 20rpx 0;
}

.fail_box {
  text-align: left;
  padding: 20rpx 40rpx;
  margin: auto;
  color: #939393;
  font-size: 32rpx;
}

.fail_box view {
  margin: 15rpx 0;
}

.fail_btn {
  margin: 20rpx auto;
  width: 90%;
  background: #254bee;
  color: #ffffff;
  padding: 30rpx 0;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.fail-pop .cancel {
  position: absolute;
  top: 30rpx;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
}


.device_bg {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background-color: #000000;
  opacity: 0.4;
}

.device_pop {
  background-color: white;
  position: fixed;
  top: 8%;
  left: 50rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  text-align: left;
  width: 400rpx;
  color: #282828;
}

.device_list {
  width: 400rpx;
  overflow: scroll;
  border-radius: 30rpx;
}

.device_list_item {
  padding: 34rpx 50rpx;
  white-space: nowrap;
  overflow: scroll;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #E9E9E9;
  border-collapse: separate;
  border-spacing: 10px 50px;
}

.device_list_item:last-child {
  border-bottom: none;
}

.device_pop .active {
  background: #E8EDFF;
  color: #254bee;
  font-weight: bold;
  z-index: 100;
}