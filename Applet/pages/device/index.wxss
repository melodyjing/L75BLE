/* pages/device/index.wxss */
.wrapper{
  width: 100%;
  background: #F5F5F5;
  min-height: 100vh;
}
.content{
  width: 94%;
  margin: auto;
  /* padding-top: 20rpx; */
}

.content .welcome_word{
  color: #141414;
  font-weight: bolder;
  font-size: 50rpx;
  margin: 10rpx auto;
}
.content .tip{
  font-size: 30rpx;
  color: #939393;
}
.list{
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.list .box{
  width: 40%;
  background: #FFFFFF;
  padding: 30rpx 30rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 0;

  position: relative;
}
.box .product_img{
  width: 80rpx;
  height: 160rpx;
  margin-right: 10rpx;
}
.box .right{
  width: 65%;
}
.box .right view:first-child{
  color: #000000;
  font-size: 30rpx;
  font-weight: bold;
}
.box .right view:last-child{
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #7F7F7F;
}
.box .right view:last-child text{
  color: #FFBC75;
}
.box1{
  width: 40%;
  background: #FFFFFF;
  padding: 70rpx 30rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.box1 image{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  margin: auto;
}
.device_name{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.selected{
  width: 40rpx;
  height: 40rpx;
  /* position: relative;
  top: -75rpx;
  left: 35rpx; */
  position: absolute;
  top: 5rpx;
  right: 10rpx;
}
.bottom{
  background: #ffffff;
  width: 100%;
  padding: 20rpx 0 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  font-size: 22rpx;
  color: #282828;
  text-align: center;
  z-index:200;
}
.bottom .btn{
  margin: 0 30rpx;
}
.bottom image{
  width: 80rpx;
  height: 80rpx;
}



.add-bg{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background-color: #494949;
  opacity: 0.8;
}
.add_pop{
  width: 86%;
  height: 450rpx;
  background-color: #F0F0F0;
  position: fixed;
  top: 30%;
  left: 7%;
  border-radius: 30rpx;
  padding-top: 20rpx;
  font-size: 33rpx;
}
.pop_title{
  text-align: center;
  font-size: 38rpx;
  font-weight: bold;
  margin: 30rpx 0;
}
.input{
  background: #ffffff;
  border: 1rpx solid #9CA3B0;
  width: 85%;
  margin: auto;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
}
.type_line{
  display: flex;
  width: 98%;
  margin: 35rpx auto 0;
  align-items: center;
  overflow: scroll;
  font-size: 28rpx;
  color: #8E8E8E;
}
.type_line view{
  width: 120rpx;
  padding: 30rpx 0;
  text-align: center;
  border-radius: 50%;
  background: #DCDCDC;
  margin: 0 5rpx;
}
.type_line .active{
  background: #007AFF;
  color: #ffffff;
}
.add_line{
  display: flex;
  align-items: center;
  border-top: 1rpx solid #9CA3B0;
  width: 90%;
  margin: 40rpx auto;
}
.add_line view{
  width: 50%;
  text-align: center;
  padding: 20rpx 0;
  color: #007AFF;
  font-size: 40rpx;
}
.add_line view:first-child{
  border-right: 1rpx solid #9CA3B0;
}