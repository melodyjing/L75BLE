.close {
  width: 30rpx;
  height: 30rpx;
  overflow: hidden;
  position:relative;
  top: 65rpx;
  left: 535rpx;
  /* right: 105rpx; */
  /* top: 19%; */
  z-index: 999;
  background: rgba(255, 255, 255, 0.5);
  padding: 10rpx;
  border-radius: 50%;
}

.close::after {
  transform: rotate(-45deg);
}

.close::before {
  transform: rotate(45deg);
}

.close::before,
.close::after {
  content: '';
  position: absolute;
  height: 6rpx;
  width: 60%;
  top: 50%;
  left: 20%;
  margin-top: -2rpx;
  background: #f5f5f5;
}

